<div class="summary">
  <div class="container gridContainer">
    <div class="subject">
      <div class="subjectHeader">
        <%= image_tag(report.profile_photo) %>

        <h2 class="summaryTitle">
          Diversity Report For
          <a href="#" class="subjectUsername"><%= report.subject %></a>
        </h2>
      </div>

      <ul class="metaInfo">
        <li><%= report.friends_count %></li>
        <li><%= report.friends_in_report_percentage %></li>
      </ul>

      <a href="#" class="btn">Share Report</a>
    </div>

    <!-- Links to toggle the display of each graph get added here by JS. -->
    <ul class="demographicKeys js-demographicKeys nav"></ul>

    <div class="graphs">
      <% report.graphs.each_with_index do |graph, index| %>
        <%= render "reports/graph", graph: graph, index: index %>
      <% end %>
    </div>
  </div>
</div>
